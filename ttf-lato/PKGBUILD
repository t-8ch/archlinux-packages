# Maintainer: Thomas Weißschuh <thomas t-8ch de>

pkgname=ttf-lato
pkgver=1.105
pkgrel=1
pkgdesc='a sanserif type­face family'
url="http://www.latofonts.com/lato-free-fonts/"
license=('custom:OFL')
arch=('any')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
source=("${pkgname}-${pkgver}::http://www.latofonts.com/download/LatoOFL.zip"
        'install')

install=install

package() {
	cd "${srcdir}"
	install -dm755 "${pkgdir}"/usr/share/fonts/OTF
	install -m644 OTF/*.otf "${pkgdir}"/usr/share/fonts/OTF

	install -Dm644 OFL.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
	install -Dm644 README.txt "${pkgdir}/usr/share/doc/${pkgname}/README.txt"
	install -dm755 "${pkgdir}/usr/share/doc/${pkgname}/"
}

sha1sums=('06ab105f844c4a21aa60bf32516225a32e0e3cdf'
          'fddcb703e537aef850ffee12f9018969269896d8')
