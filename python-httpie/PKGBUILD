pkgname=python-httpie
pkgver=0.2.6
pkgrel=1
pkgdesc="cURL for humans"
url="https://github.com/jkbr/httpie"
depends=('python-requests'
         'python-pygments')
makedepends=('python-distribute')
license=('BSD')
arch=('any')
source=("http://pypi.python.org/packages/source/h/httpie/httpie-$pkgver.tar.gz")

build() {
    cd $srcdir/httpie-$pkgver
    python3 setup.py build
}

package() {
    cd $srcdir/httpie-$pkgver
    python3 setup.py install --root="$pkgdir" --optimize=1
}
sha512sums=('5e216fb7595b608d56c7656266d8466888db5d40374594b55c140820d866ad36b5c333d84a4cd043ed57f1e10c3236b5249b8eb22569e0bb812c29a1459a1f61')
