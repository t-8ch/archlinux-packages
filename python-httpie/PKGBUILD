pkgname=python-httpie
pkgver=0.2.5
pkgrel=1
pkgdesc="cURL for humans"
url="https://github.com/jkbr/httpie"
depends=('python-requests'
         'python-pygments')
makedepends=('python-distribute')
license=('BSD')
arch=('any')
source=("http://pypi.python.org/packages/source/h/httpie/httpie-$pkgver.tar.gz")

build() {
    cd $srcdir/httpie-$pkgver
    python3 setup.py build
}

package() {
    cd $srcdir/httpie-$pkgver
    python3 setup.py install --root="$pkgdir" --optimize=1
}
sha512sums=('8ec5fd60e9ca249d2d76145fa6f07e7f0e6e38ce79d31067905ad5e02c6ef475aeff95d867a2c20262579ac3e4e267f0cdab8261fb125305932ea2456fb02aec')
