pkgname=honpurple
pkgver=0.5.8
pkgrel=1
pkgdesc="libpurple plugin for the Heroes of Newerth chat server."
arch=('i686' 'x86_64')
url="http://code.google.com/p/honpurple"
license=('GPL3')
depends=("libpurple")
source=( "http://honpurple.googlecode.com/files/${pkgname}-${pkgver}.tar.bz2" )

build() {
  cd "${srcdir}"
  make
}

package() {
  cd "${srcdir}"
  make DESTDIR="${pkgdir}/" install
}

